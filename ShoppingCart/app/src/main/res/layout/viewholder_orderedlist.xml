<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="16dp"
    android:elevation="3dp"

    >

    <ImageView
        android:id="@+id/picOrderedList"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pop_1" />

    <TextView
        android:id="@+id/orderedListTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:textColor="#313b54"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/picOrderedList"
        app:layout_constraintTop_toTopOf="@+id/picOrderedList" />


    <TextView
        android:id="@+id/orderedListNumberItemTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/blue_grey"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/titleOrderedListNum"
        app:layout_constraintTop_toTopOf="@+id/titleOrderedListNum"

        />

    <TextView
        android:id="@+id/feeOrderedListEachItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="0"
        android:textSize="16sp"
        android:textColor="#373b54"

        app:layout_constraintBottom_toBottomOf="@+id/orderedListTitleTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/orderedListTitleTxt" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="$"
        android:textColor="#ff3d00"
        app:layout_constraintBottom_toBottomOf="@+id/feeOrderedListEachItem"
        app:layout_constraintEnd_toStartOf="@+id/feeOrderedListEachItem"
        app:layout_constraintTop_toTopOf="@+id/feeOrderedListEachItem" />

    <TextView
        android:id="@+id/totalOrderedListEachItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#373b54"
        android:textSize="18sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@+id/titleOrderedListNum"
        app:layout_constraintEnd_toEndOf="@+id/feeOrderedListEachItem" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="$"
        android:textColor="#ff3d00"
        android:textSize="18sp"

        app:layout_constraintBottom_toBottomOf="@+id/totalOrderedListEachItem"
        app:layout_constraintEnd_toStartOf="@+id/totalOrderedListEachItem"
        app:layout_constraintTop_toTopOf="@+id/totalOrderedListEachItem" />

    <TextView
        android:id="@+id/titleOrderedListNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数量："
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/blue_grey"
        app:layout_constraintBottom_toBottomOf="@+id/picOrderedList"
        app:layout_constraintStart_toEndOf="@+id/picOrderedList" />
</androidx.constraintlayout.widget.ConstraintLayout>